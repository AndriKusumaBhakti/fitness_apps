<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/medbooks_16dp"
            android:orientation="vertical">
            <com.fitness.view.DateInput
                android:id="@+id/date_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medbooks_10dp"
                android:gravity="top"
                android:textSize="@dimen/medbooks_12dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_data"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.fitness.view.ButtonRegular
                    android:id="@+id/save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_btn_red"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:layout_marginRight="@dimen/medbooks_5dp"
                    android:textSize="@dimen/medbooks_16dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/btn_save"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle"/>
                <com.fitness.view.ButtonRegular
                    android:id="@+id/cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/medbooks_5dp"
                    android:background="@drawable/selector_btn_red"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/medbooks_16dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/btn_cancel"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/spinner_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/medbooks_200dp"
                android:orientation="horizontal">
                <VideoView
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medbooks_200dp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imagePlay"
                        android:layout_width="@dimen/medbooks_50dp"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/medbooks_50dp"
                        android:src="@drawable/icon_play"/>
                </FrameLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linearLayoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_border"
                android:padding="@dimen/medbooks_5dp"
                android:layout_marginTop="@dimen/medbooks_5dp"
                android:orientation="horizontal">
                <com.fitness.view.TextViewBold
                    android:id="@+id/titleYoutobe"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/medbooks_12dp"
                    android:textColor="@color/grey2"
                    android:layout_marginBottom="@dimen/medbooks_5dp"
                    android:layout_height="wrap_content"
                    android:text="title"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageArrow"
                        android:layout_width="@dimen/medbooks_18dp"
                        android:layout_gravity="center|right"
                        android:layout_height="@dimen/medbooks_20dp"
                        android:src="@drawable/arrow_right"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ViewAnimator
                    android:id="@+id/select_filter_animator"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/medbooks_5dp"
                    android:paddingRight="@dimen/medbooks_5dp"
                    android:layout_marginBottom="@dimen/medbooks_10dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/medbooks_5dp"
                            android:orientation="horizontal">
                            <com.fitness.view.TextViewRegular
                                android:layout_width="match_parent"
                                android:layout_weight="2.1"
                                android:textSize="@dimen/medbooks_12dp"
                                android:textColor="@color/grey2"
                                android:layout_height="wrap_content"
                                android:text="@string/label_deskciption" />
                            <com.fitness.view.TextViewRegular
                                android:layout_width="match_parent"
                                android:layout_weight="2.5"
                                android:textSize="@dimen/medbooks_12dp"
                                android:textColor="@color/grey2"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text=":" />
                            <com.fitness.view.TextViewRegular
                                android:id="@+id/deskripsiYoutobe"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:textSize="@dimen/medbooks_12dp"
                                android:textColor="@color/grey2"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.fitness.view.TextViewRegular
                                android:layout_width="match_parent"
                                android:layout_weight="2.1"
                                android:textSize="@dimen/medbooks_12dp"
                                android:textColor="@color/grey2"
                                android:layout_height="wrap_content"
                                android:text="@string/label_channel" />
                            <com.fitness.view.TextViewRegular
                                android:layout_width="match_parent"
                                android:layout_weight="2.5"
                                android:textSize="@dimen/medbooks_12dp"
                                android:textColor="@color/grey2"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text=":" />
                            <com.fitness.view.TextViewSemiBold
                                android:id="@+id/channelYoutobe"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:textSize="@dimen/medbooks_12dp"
                                android:textColor="@color/grey2"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/medbooks_5dp"
                                android:text="" />
                        </LinearLayout>
                        <com.fitness.view.ButtonRegular
                            android:id="@+id/btn_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/medbooks_30dp"
                            android:layout_gravity="right"
                            android:background="@drawable/selector_btn_grey"
                            android:textSize="@dimen/medbooks_10dp"
                            android:layout_centerInParent="true"
                            android:text="@string/btn_detail"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            style="?android:attr/borderlessButtonStyle"/>
                    </LinearLayout>
                </ViewAnimator>
            </LinearLayout>
        </LinearLayout>
</FrameLayout>

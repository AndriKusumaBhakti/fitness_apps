<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/spinner_border">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearLayoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/medbooks_10dp"
                android:paddingTop="@dimen/medbooks_10dp"
                android:orientation="horizontal">
                <com.fitness.view.TextViewLight
                    android:id="@+id/titleCard"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/medbooks_12dp"
                    android:gravity="center"
                    android:textColor="@color/grey2"
                    android:layout_height="wrap_content"
                    android:text="title" />
                <com.fitness.view.TextViewRegular
                    android:id="@+id/timeClass"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/medbooks_12dp"
                    android:textColor="@color/grey2"
                    android:layout_height="wrap_content"
                    android:text="title" />
                <com.fitness.view.ButtonRegular
                    android:id="@+id/btn_detail"
                    android:layout_width="@dimen/medbooks_80dp"
                    android:layout_height="@dimen/medbooks_20dp"
                    android:background="@drawable/selector_btn_red"
                    android:textSize="@dimen/medbooks_10dp"
                    android:layout_centerInParent="true"
                    android:text="@string/btn_detail"
                    android:textColor="@color/greywhite"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/spinner_border">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:background="@color/greywhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/medbooks_10dp"
            android:orientation="vertical">
            <com.fitness.view.TextViewBold
                android:id="@+id/titleCard"
                android:layout_width="wrap_content"
                android:textSize="@dimen/medbooks_14dp"
                android:textColor="@color/red_bar"
                android:layout_height="wrap_content"
                android:text="title"
                android:layout_marginBottom="@dimen/medbooks_5dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medbooks_2dp"
                android:layout_marginRight="@dimen/medbooks_50dp"
                android:layout_marginBottom="@dimen/medbooks_5dp"
                android:background="@color/greywhite"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_data_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:scrollbars="horizontal"
                android:overScrollMode="never"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|top"
                android:layout_marginTop="@dimen/medbooks_10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/removeData"
                    android:layout_width="@dimen/medbooks_20dp"
                    android:layout_height="@dimen/medbooks_20dp"
                    android:layout_marginRight="@dimen/medbooks_5dp"
                    android:src="@drawable/icon_remove"/>
                <LinearLayout
                    android:id="@+id/addData"
                    android:layout_width="@dimen/medbooks_20dp"
                    android:layout_height="@dimen/medbooks_20dp"
                    android:layout_marginRight="@dimen/medbooks_10dp"
                    android:background="@drawable/shape_round_red_btn_2"
                    android:orientation="vertical">
                    <com.fitness.view.TextViewBold
                        android:layout_width="match_parent"
                        android:textSize="@dimen/medbooks_16dp"
                        android:textColor="@color/greywhite"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="+"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>

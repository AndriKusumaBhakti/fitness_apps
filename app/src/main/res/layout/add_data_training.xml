<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medbooks_16dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <com.fitness.view.TextViewBold
                android:id="@+id/close_x_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="X"
                android:textSize="20sp" />
            <com.fitness.view.TextViewBold
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="@string/select_exercises" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/medbooks_2dp"
            android:background="@color/red_bar_status"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/label_password_lama"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/medbooks_5dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/medbooks_48dp"
                android:background="@drawable/spinner_border"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingLeft="@dimen/medbooks_10dp"
                android:gravity="left|center"
                android:hint="Input Weight"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textSize="@dimen/medbooks_14dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/medbooks_5dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_reps"
                android:layout_width="match_parent"
                android:layout_height="@dimen/medbooks_48dp"
                android:background="@drawable/spinner_border"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingLeft="@dimen/medbooks_10dp"
                android:gravity="left|center"
                android:hint="Input Reps"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textSize="@dimen/medbooks_14dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/medbooks_2dp"
            android:background="@color/red_bar_status"/>
        <com.fitness.view.ButtonRegular
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_btn_red"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/medbooks_16dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/btn_save"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</FrameLayout>

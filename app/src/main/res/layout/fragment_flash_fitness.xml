<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/medbooks_10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
            <fragment
                android:id="@+id/map_fitness"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.google.android.gms.maps.SupportMapFragment"/>
        </LinearLayout>
    </LinearLayout>
    <ViewAnimator
        android:id="@+id/select_filter_animator"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medbooks_10dp"
            android:background="@color/greywhite2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medbooks_5dp"
                android:paddingRight="@dimen/medbooks_5dp"
                android:background="@drawable/shape_filter"
                android:orientation="vertical">
                <com.fitness.view.CustomSpinnerView
                    android:id="@+id/spinnerClass"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medbooks_5dp"
                android:paddingRight="@dimen/medbooks_5dp"
                android:background="@drawable/shape_filter"
                android:orientation="vertical">
                <com.fitness.view.CustomSpinnerView
                    android:id="@+id/spinnerClub"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.fitness.view.ButtonRegular
                android:id="@+id/save_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selector_btn_red"
                android:textSize="@dimen/medbooks_16dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/medbooks_10dp"
                android:layout_marginBottom="@dimen/medbooks_10dp"
                android:text="@string/btn_apply"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:textStyle="bold"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </ViewAnimator>
</FrameLayout>

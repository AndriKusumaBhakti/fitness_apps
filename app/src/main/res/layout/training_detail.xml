<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/medbooks_16dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <com.fitness.view.TextViewBold
                android:id="@+id/close_x_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="X"
                android:textSize="20sp" />
            <com.fitness.view.TextViewBold
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="@string/select_exercises" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/medbooks_2dp"
            android:background="@color/red_bar_status"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_data"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginTop="@dimen/medbooks_10dp"
            android:layout_marginBottom="@dimen/medbooks_10dp"
            android:padding="@dimen/medbooks_5dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/medbooks_2dp"
            android:background="@color/red_bar_status"/>
    </LinearLayout>
</FrameLayout>
